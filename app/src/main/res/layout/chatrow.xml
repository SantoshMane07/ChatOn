<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp"
    android:orientation="horizontal"
    android:layout_marginTop="2dp"
    android:elevation="5dp"
    style="@style/ButtonStyle"
    android:id="@+id/chat_row"
    android:background="#1E00F5FF"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/cimgv_profile_img"
        android:layout_width="60dp"
        android:layout_height="60dp"
        tools:src="@drawable/riteshdeshmukhprofilepic"
        app:civ_border_color="@color/primaryColor"
        app:civ_border_width="1dp"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="5dp"
        android:padding="5dp"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Ritesh Deshmukh"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/lato_bold"
            />
        <TextView
            android:id="@+id/tv_user_status"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Hey! there iam using Bzechat"
            android:textStyle="normal"
            android:textSize="15sp"
            android:textColor="@color/grey"
            android:fontFamily="@font/lato"
            />


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>