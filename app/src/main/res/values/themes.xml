<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ChatOn" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="MyAppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--Primary color-->
        <item name="colorPrimary">@color/primaryColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/black</item>
    </style>
    <style name="ButtonStyle">
        <item name="backgroundTint">@color/primaryColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">100sp</item>
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">1dp</item>
        <item name="fontFamily">@font/lato_bold</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="UserNameStringColor">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/lato_bold</item>
    </style>
</resources>